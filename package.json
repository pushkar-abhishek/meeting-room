{
  "name": "typescript_test",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*.ts",
    "build-ts": "tsc -p .",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch": "nodemon --watch 'src/**/*.ts' --exec ts-node server.ts",
    "prod": "nodemon dist/server.js",
    "prepush": "npm run tslint",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint:fix && npm run format && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": "8.9.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "3.0.6",
    "body-parser": "^1.18.3",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "express": "^4.16.4",
    "express-validator": "5.3.1",
    "http-status-codes": "1.3.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "4.17.11",
    "mongoose": "^5.4.3",
    "mongoose-paginate": "5.0.3",
    "nodemailer": "6.2.1",
    "pug": "2.0.4",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/chai": "^4.1.7",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "4.14.134",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.7",
    "@types/mongoose-paginate": "5.0.6",
    "@types/nodemailer": "6.2.0",
    "@types/pug": "2.0.4",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.4.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.2.2"
  }
}
